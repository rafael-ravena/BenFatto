@model BenFatto.App.DTO.Import
<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <label asp-for="When" class="col-form-label col-md-3 text-right"></label>
                <div class="col"><input asp-for="When" class="form-control" /></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="row">
                <label asp-for="FileName" class="col-form-label col-md-3 text-right"></label>
                <div class="col"><input asp-for="FileName" class="form-control" /></div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="row">
                <div class="col col-form-label">
                    <div class="form-check form-check-inline">
                        <input name="ErrorCount" id="ErrorCount" class="form-check-input" type="checkbox" value="1" />
                        <label for="ErrorCount" class="form-check-label">@Html.DisplayNameFor(@model => model.ErrorCount)</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="row">
                <div class="col col-form-label form-check">
                    <div class="form-check form-check-inline">
                        <input name="SuccessCount" id="SuccessCount" class="form-check-input" type="checkbox" value="1" />
                        <label for="SuccessCount" class="form-check-label">@Html.DisplayNameFor(@model => model.SuccessCount)</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col text-right">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
</form>
