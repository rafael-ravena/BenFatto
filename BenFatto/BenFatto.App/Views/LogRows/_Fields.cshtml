@model BenFatto.App.DTO.LogRow
<input name="Id" type="hidden" value="@(Model.Id)" />
<input name="ImportId" type="hidden" value="@(Model.ImportId)" />
<div class="row">
    <div class="col-md-3">
        <label asp-for="OriginalLine" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="OriginalLine" class="form-control" data-required="1" data-behavior="search-object" data-search-object="@(ApiClientHelper.LogRowToObjectUrl)" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3">
        <label asp-for="IpAddress" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="IpAddress" class="form-control" data-required="1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="RfcId" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="RfcId" class="form-control" data-required="1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="UserId" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="UserId" class="form-control" data-required="1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="Date" class="control-label" data-required="1"></label>
        @((Model.Date == DateTime.MinValue ? DateTime.Now : Model.Date).ToString(SettingsManager.Current.BrowserDateFormat))
    </div>
    <div class="col">
        <div class="input-group">
            <div class="input-group-prepend position-relative">
                <input asp-for="Date" asp-format="@SettingsManager.Current.BrowserDateFormat" class="form-control"
                       value="@((Model.Date == DateTime.MinValue ? DateTime.Now : Model.Date).ToString(SettingsManager.Current.BrowserDateFormat))" data-required="1" />
            </div>
            <select asp-for="TimeZone" asp-items="@ViewBag.UtcOffsetRange" class="form-control" data-required="1">
                <option>Select the time zone offset</option>
            </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="Method" class="control-label"></label>
    </div>
    <div class="col">
        <select asp-for="Method" asp-items="@ViewBag.Methods" class="form-control" data-required="1">
            <option>Select the @Html.DisplayNameFor(Model => Model.Method)</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="Resource" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="Resource" class="form-control" data-required="1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="Protocol" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="Protocol" class="form-control" data-required="1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="ResponseCode" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="ResponseCode" class="form-control" data-required="1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="ResponseSize" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="ResponseSize" class="form-control" data-required="1" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="Referer" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="Referer" class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="UserAgent" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="UserAgent" class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label asp-for="RowNumber" class="control-label"></label>
    </div>
    <div class="col">
        <input asp-for="RowNumber" class="form-control" data-required="1" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col text-right">
        <button type="button" class="btn btn-primary action-btn" data-dismiss="modal">
            <i class="fa fa-fw fa-times"></i> Cancel
        </button>
        <button type="submit" class="btn btn-info action-btn">
            <i class="fa fa-fw fa-floppy-o"></i> Save
        </button>
    </div>
</div>
